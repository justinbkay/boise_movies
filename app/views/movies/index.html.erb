<h1>Movies</h1>
<div data-controller="filter" id="rating_filter">
  <div class="search">
    <i class="material-icons">search</i>
    <input type="search" placeholder="Search" data-action="keyup->filter#titleSearch" />
  </div>
  <span data-target="filter.output"></span>
  <div data-action="click->filter#toggleG" data-target="filter.g" class="chip green lighten-2">G (<%= @count_by_rating['G'] %>)</div>
  <div data-action="click->filter#togglePG" data-target="filter.pg" class="chip green lighten-2">PG (<%= @count_by_rating['PG'] %>)</div>
  <div data-action="click->filter#togglePG13" data-target="filter.pg13" class="chip green lighten-2">PG-13 (<%= @count_by_rating['PG-13'] %>)</div>
  <div data-action="click->filter#toggleR" data-target="filter.r" class="chip green lighten-2">R (<%= @count_by_rating['R'] %>)</div>
  <div data-action="click->filter#toggleUnrated" data-target="filter.unrated" class="chip green lighten-2">Unrated (<%= @count_by_rating['Unrated'] %>)</div>
</div>
<% @movies.each do |m| %>
  <% cache m do %>
    <%= render 'movie', {m: m} %>
  <% end %>
<% end %>