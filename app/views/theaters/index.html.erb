<h1>Theaters</h1>
<%= link_to  "new", new_theater_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Website</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @theaters.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td><%= number_to_phone t.phone %></td>
        <td><%= t.website %></td>
        <td><%= link_to  "edit", edit_theater_path(t) %></td>
      </tr>
    <% end %>
  </tbody>
</table>